{
  "name": "he-thong-quan-ly-ho-so",
  "private": true,
  "version": "1.9.5",
  "main": "electron/main.js",
  "author": "DonViHanhChinh",
  "description": "Phan mem quan ly ho so dia chinh",
  "scripts": {
    "dev": "concurrently -k \"npm run server\" \"vite --port 5173\" \"npm run electron:dev\"",
    "server": "node server/index.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "electron:build": "npm run build && electron-builder --win --x64 -p never"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "@supabase/supabase-js": "^2.39.7",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "docx-preview": "^0.3.2",
    "docxtemplater": "^3.46.0",
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.7",
    "file-saver": "^2.0.5",
    "json-server": "^0.17.4",
    "jszip": "^3.10.1",
    "lucide-react": "^0.344.0",
    "pizzip": "^3.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-image-crop": "^11.0.5",
    "recharts": "^2.12.2",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.quanlyhoso.app",
    "productName": "Quan Ly Ho So",
    "artifactName": "Quan-Ly-Ho-So-Setup-${version}.${ext}",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!db.json"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "Quan Ly Ho So",
      "deleteAppDataOnUninstall": true,
      "differentialPackage": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "KINGIRIS1",
        "repo": "QLHS2025"
      }
    ]
  }
}
