{
  "name": "he-thong-quan-ly-ho-so",
  "private": true,
  "version": "1.5.0",
  "main": "electron/main.js",
  "author": "DonViHanhChinh",
  "description": "Phan mem quan ly ho so dia chinh",
  "scripts": {
    "dev": "concurrently -k \"npm run server\" \"vite --port 5173\" \"npm run electron:dev\"",
    "server": "node server/index.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "electron:build": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "cors": "^2.8.5",
    "json-server": "^0.17.4",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.2",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.quanlyhoso.app",
    "productName": "Quan Ly Ho So",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!db.json"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/vite.svg"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "Quan Ly Ho So"
    }
  }
}